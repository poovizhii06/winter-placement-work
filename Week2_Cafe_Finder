 script.js
const cafes = [
    { name: "Cafe Mocha", rating: 4.5 },
    { name: "Brew House", rating: 4.2 },
    { name: "Coffee Day", rating: 4.0 }
];

function displayCafes() {
    const container = document.getElementById("cards");
    container.innerHTML = "";

    cafes.forEach(cafe => {
        const div = document.createElement("div");
        div.className = "card";
        div.innerHTML = `
            <h3>${cafe.name}</h3>
            <p> ${cafe.rating}</p>
            <button onclick='saveCafe("${cafe.name}", ${cafe.rating})'>Save</button>
        `;
        container.appendChild(div);
    });
}

function saveCafe(name, rating) {
    let saved = JSON.parse(localStorage.getItem("savedCafes") || "[]");

    if (!saved.find(c => c.name === name)) {
        saved.push({ name, rating });
        localStorage.setItem("savedCafes", JSON.stringify(saved));
        alert("Cafe Saved");
    } else {
        alert("Already Saved");
    }
}

function showSaved() {
    const container = document.getElementById("cards");
    container.innerHTML = "";

    const saved = JSON.parse(localStorage.getItem("savedCafes") || "[]");

    if (saved.length === 0) {
        container.innerHTML = "<p>No saved cafes</p>";
        return;
    }

    saved.forEach(cafe => {
        const div = document.createElement("div");
        div.className = "card";
        div.innerHTML = `
            <h3>${cafe.name}</h3>
            <p>⭐ ${cafe.rating}</p>
        `;
        container.appendChild(div);
    });
}

displayCafes();
